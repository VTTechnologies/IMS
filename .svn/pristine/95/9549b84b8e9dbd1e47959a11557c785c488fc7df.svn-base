            catch (Exception ex)
            {
                ErrorLog.saveerror(ex);
            }
        }

        #endregion

        /// <summary>
        /// All The Events That are used in coding
        /// </summary>

        #region Events
        protected void btnSave_Click(object sender, EventArgs e)
        {
            savedlogic();
        }
        #endregion
    }
