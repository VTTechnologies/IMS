            lblinvoiceno.Text = p.purchase_id.ToString();
            lblsubtotal.Text = p.actual_amount.ToString();
            lblTaxAmount.Text = p.total_tax.ToString();
            lblDiscountAmt.Text = p.discount.ToString();
            lblGrandTotal.Text = p.grand_total.ToString();

        }
    }
}